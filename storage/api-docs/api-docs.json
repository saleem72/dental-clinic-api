    "components": {
        "schemas": {
            "PatientResource": {
                "title": "Patient",
                "description": "Patient details returned by the API",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "username": {
                        "type": "string",
                        "example": "john_doe"
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "example": "john@example.com"
                    },
                    "image": {
                        "type": "string",
                        "example": "http://localhost:8000/storage/avatars/john.png"
                    },
                    "phone": {
                        "type": "string",
                        "example": "+123456789"
                    },
                    "date_of_birth": {
                        "type": "string",
                        "example": "1972-11-28"
                    },
                    "gender": {
                        "type": "enum[male, female, other]",
                        "example": "male"
                    },
                    "roles": {
                        "type": "array",
